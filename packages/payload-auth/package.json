{
  "name": "payload-auth",
  "version": "1.8.0",
  "description": "The most powerful authentication solution for Payload CMS",
  "repository": {
    "type": "git",
    "url": "https://github.com/payload-auth/payload-auth.git",
    "directory": "packages/payload-auth"
  },
  "bugs": {
    "url": "https://github.com/payload-auth/payload-auth/issues"
  },
  "homepage": "https://github.com/payload-auth/payload-auth#readme",
  "license": "MIT",
  "author": "forrestdevs <luke.gannon@me.com>",
  "keywords": [
    "payload-cms",
    "better-auth",
    "plugin",
    "adapter",
    "authentication",
    "payload-plugin"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./better-auth": {
      "import": "./dist/better-auth/index.js",
      "types": "./dist/better-auth/index.d.ts",
      "default": "./dist/better-auth/index.js"
    },
    "./better-auth/adapter": {
      "import": "./dist/better-auth/adapter/index.js",
      "types": "./dist/better-auth/adapter/index.d.ts",
      "default": "./dist/better-auth/adapter/index.js"
    },
    "./better-auth/plugin": {
      "import": "./dist/better-auth/plugin/index.js",
      "types": "./dist/better-auth/plugin/index.d.ts",
      "default": "./dist/better-auth/plugin/index.js"
    },
    "./better-auth/plugin/client": {
      "import": "./dist/better-auth/plugin/payload/exports/client.js",
      "types": "./dist/better-auth/plugin/payload/exports/client.d.ts",
      "default": "./dist/better-auth/plugin/payload/exports/client.js"
    },
    "./better-auth/plugin/rsc": {
      "import": "./dist/better-auth/plugin/payload/exports/rsc.js",
      "types": "./dist/better-auth/plugin/payload/exports/rsc.d.ts",
      "default": "./dist/better-auth/plugin/payload/exports/rsc.js"
    },
    "./shared/payload/fields": {
      "import": "./dist/shared/payload/fields/index.js",
      "types": "./dist/shared/payload/fields/index.d.ts",
      "default": "./dist/shared/payload/fields/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./tsconfig.tsbuildinfo",
    "build": "pnpm clean && pnpm copyfiles && pnpm build:types && pnpm build:swc",
    "dev": "pnpm build && pnpm dev:watch",
    "dev:watch": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths --watch",
    "copyfiles": "copyfiles -u 1 --exclude \"src/better-auth/adapter/tests/**/*\" \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,json}\" dist",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths",
    "build:types": "pnpm generate:better-auth-types && tsc --project tsconfig.json",
    "test": "vitest",
    "generate:better-auth-types": "rm -rf src/better-auth/generated-types.ts && tsx src/better-auth/scripts/generate-types.ts"
  },
  "peerDependencies": {
    "@better-auth/passkey": ">=1.4.0 <2",
    "@payloadcms/next": ">=3.69.0 <4",
    "@payloadcms/ui": ">=3.69.0 <4",
    "better-auth": ">=1.4.0 <2",
    "next": ">=15.4.8 <16",
    "payload": ">=3.69.0 <4",
    "react": ">=19.2.1 <20",
    "react-dom": ">=19.2.1 <20"
  },
  "devDependencies": {
    "@better-auth/passkey": "1.4.10",
    "@better-auth/core": "1.4.10",
    "@better-auth/sso": "1.4.10",
    "@better-auth/stripe": "1.4.10",
    "@better-auth/scim": "1.4.10",
    "@payloadcms/db-postgres": "3.69.0",
    "@payloadcms/next": "3.69.0",
    "@payloadcms/ui": "3.69.0",
    "@polar-sh/better-auth": "1.5.0",
    "@polar-sh/sdk": "^0.41.5",
    "better-auth": "1.4.10",
    "@swc/cli": "0.7.9",
    "@swc/core": "1.15.8",
    "@types/node": "25.0.3",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "payload": "3.69.0",
    "tsx": "^4.19.4",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  },
  "dependencies": {
    "@better-auth/utils": "0.3.0",
    "@tanstack/react-form": "1.27.7",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "jose": "6.1.3",
    "lucide-react": "0.562.0",
    "qrcode.react": "4.2.0",
    "sonner": "2.0.7",
    "svix": "1.84.1",
    "tailwind-merge": "3.4.0",
    "uncrypto": "0.1.3"
  }
}
